{% extends 'Ivan1986DebBundle::layout.html.twig' %}
{% block title %}{% if all %}{% trans %}Список репозиториев в системе{% endtrans %}
{% else %}{% trans %}Список добавленных вами репозиториев{% endtrans %}{% endif %}{% endblock %}
{% block fos_user_content %}

<div class="page-header">
    {% if all %}
    <h1>{% trans %}Список всех репозиториев{% endtrans %}</h1>
    {% else %}
    <h1>{% trans %}Список добавленных вами репозиториев{% endtrans %}</h1>
    {% endif %}
</div>

<form class="well form-search" method="get" action="{{ path('repos', {'my': 'all'}) }}">
    <input type="search" name="search" class="input-medium search-query" placeholder="{% trans %}Искать...{% endtrans %}">
    <button type="submit" class="btn">{% trans %}Поиск{% endtrans %}</button>
</form>

<table class="records_list table table-striped table-bordered">
    <thead>
        <tr>
            <th>Url</th>
            <th>Bin</th>
            <th>Src</th>
            <th>{% trans %}Имя{% endtrans %}</th>
            <th>{% trans %}Установить{% endtrans %} (<a href="https://help.ubuntu.com/community/AptURL">AptURL</a>)</th>
            <th>{% trans %}Владелец{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in pagerfanta.currentPageResults %}
        <tr>
            <td>{{ entity.repoString }}</td>
            <td><img src="{{ asset('bundles/ivan1986deb/images/'~(entity.bin ? 'yes' : 'no')~'.png') }}" alt="{{ entity.bin ? 'yes' : 'no' }}" /></td>
            <td><img src="{{ asset('bundles/ivan1986deb/images/'~(entity.src ? 'yes' : 'no')~'.png') }}" alt="{{ entity.src ? 'yes' : 'no' }}" /></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.getForApt|raw }}</td>
            <td>
                {% if app.user and entity.owner.id == app.user.id %}
                    <a href="{{ path('repos_edit', { 'id': entity.id }) }}">{% trans %}редактировать{% endtrans %}</a>
                {% else %}
                    {{ entity.owner.username }}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% if pagerfanta.haveToPaginate %}{{ pagerfanta(pagerfanta, 'twitter_bootstrap_translated') }}{% endif %}

{% if app.user %}
    <a class="btn btn-primary" href="{{ path('repos_new') }}">{% trans %}Добавить новый репозиторий{% endtrans %}</a>
    <a class="btn btn-primary" href="{{ path('repos_new_ppa') }}">{% trans %}Добавить новый PPA репозиторий{% endtrans %}</a>
    {% if all %}
    <a class="btn right" href="{{ path('repos', {'my': 'my'}) }}">{% trans %}ваши{% endtrans %}</a>
    {% else %}
    <a class="btn right" href="{{ path('repos', {'my': 'all'}) }}">{% trans %}все{% endtrans %}</a>
    {% endif %}
{% endif %}
{% endblock %}
