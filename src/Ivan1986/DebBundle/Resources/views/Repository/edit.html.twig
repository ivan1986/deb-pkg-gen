{% extends 'Ivan1986DebBundle::layout.html.twig' %}
{% block fos_user_content %}

<h1>Repository edit</h1>

<form action="{{ path('repos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('repos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('repos_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
