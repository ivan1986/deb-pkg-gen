{% extends 'Ivan1986DebBundle::layout.html.twig' %}
{% block title %}{% trans %}Редактирование пакета{% endtrans %}{% endblock %}
{% block fos_user_content %}

<div class="page-header">
    <h1>{% trans %}Редактирование пакета{% endtrans %}</h1>
</div>

<form action="{{ path('packages_edit', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit">{% trans %}Обновить{% endtrans %}</button>
        <a href="{{ path('packages') }}">{% trans %}Назад к списку{% endtrans %}</a>
        <a href="{{ path('packages_delete', { 'id': entity.id }) }}" class="btn btn-danger">{% trans %}Удалить{% endtrans %}</a>
    </p>
</form>

{% endblock %}
