<form action="{{ path('pkg_build') }}" method="post" class="form-vertical pkg-form">

    <fieldset>
        <div class="form-group">
            <label class="control-label" for="url">{% trans %}Адрес репозитория{% endtrans %}</label>
                <input class="form-control" type="text" id="url" name="form[url]" value="{{form.url|default("")}}" placeholder="http://repo.com/debian/ stable main" />
                <p class="help-block">{% trans %}Тот адрес который вас просят добавить в sources.list{% endtrans %}</p>
        </div>
        <div class="form-group">
            <label class="control-label" for="key">GPG Key ID</label>
                <input class="form-control" type="text" id="key" name="form[key]" value="{{form.key|default("")}}" placeholder="AA123456"/>
                <p class="help-block">{% trans %}ID ключа можно обычно найти рядом с адресом репозитория{% endtrans %}</p>
        </div>
        <div class="form-group">
            <label class="control-label" for="name">{% trans %}Имя пакета{% endtrans %}</label>
                <input class="form-control" type="text" id="name" name="form[name]" value="{{form.name|default("")}}" placeholder="my-package" />
                <p class="help-block">{% trans %}Совместимое с unix именем (a-z 0-9 и тире){% endtrans %}</p>
        </div>
        <div class="form-actions">
            <input type="submit" class="btn btn-primary" value="{% trans %}Сгенерировать deb-пакет{% endtrans %}" />
        </div>
    </fieldset>
</form>
